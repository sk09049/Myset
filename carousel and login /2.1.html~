<script type=text/javascript>
function g(){
var ab=document.getElementsByName("email")[0].value;
var ab1=document.getElementsByName("password")[0].value;
if(ab==''){
alert("enter username");
}
if(ab1==''){
alert("enter password");
}
if(ab!=''&&ab1!=''){
alert("welcome :"+ab);
}
}

